{
  "name": "my-planner",
  "version": "1.0.0",
  "description": "A simple local planner, with which you may easily log your daily work.",
  "main": "app.js",
  "scripts": {
    "clean:build": "rimraf ./build && mkdir build",
    "prebuild": "run-p clean:build",
    "deploy": "npm run bootstrap:ckeditor && npm run build && npm run build:main && node ./packager.js",
    "build": "webpack --config webpack.config.renderer.prod.js",
    "bootstrap:ckeditor": "cd ./vendor/ckeditor5 && npm install && npm run build",
    "build:ckeditor": "cd ./vendor/ckeditor5 && npm run build",
    "build:main": "webpack --config webpack.config.main.prod.js",
    "build:ui": "webpack --config webpack.config.renderer.dev.js",
    "start:electron": "electron app.js",
    "start": "npm run build:ui & npm run start:electron",
    "bootstrap": "npm run bootstrap:ckeditor && npm run build:ui & npm run start:electron"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ckeditor/ckeditor5-react": "^2.1.0",
    "@ckeditor/ckeditor5-theme-lark": "^17.0.0",
    "axios": "^0.19.1",
    "bootstrap": "4.3.1",
    "ckeditor5-custom-build": "file:vendor/ckeditor5",
    "electron-protocols": "^1.0.4",
    "immer": "2.1.3",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "moment": "^2.24.0",
    "node-json-db": "^1.0.3",
    "popper.js": "^1.16.1",
    "prop-types": "15.7.2",
    "react": "^16.12.0",
    "react-calendar": "^2.19.2",
    "react-dom": "^16.12.0",
    "react-icons": "^3.9.0",
    "react-modal": "^3.11.1",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-toastify": "^4.5.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "reselect": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@ckeditor/ckeditor5-dev-utils": "^12.0.8",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "css-loader": "2.1.1",
    "cssnano": "4.1.10",
    "electron": "^7.1.13",
    "electron-packager": "^14.2.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "eslint": "5.15.2",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-react": "7.12.4",
    "express": "^4.17.1",
    "fetch-mock": "7.3.1",
    "fs-extra": "^8.1.0",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.9.0",
    "jest": "^24.5.0",
    "json-server": "0.14.2",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "0.5.0",
    "node-fetch": "^2.3.0",
    "npm-run-all": "4.1.5",
    "postcss-loader": "3.0.0",
    "raw-loader": "^4.0.0",
    "react-test-renderer": "16.8.4",
    "react-testing-library": "6.0.0",
    "redux-immutable-state-invariant": "2.1.0",
    "redux-mock-store": "1.5.3",
    "rimraf": "2.6.3",
    "style-loader": "0.23.1",
    "ts-loader": "^6.2.1",
    "tslint": "^6.1.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.8.2",
    "webpack": "4.29.6",
    "webpack-bundle-analyzer": "3.1.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1"
  },
  "engines": {
    "node": ">=8"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-debugger": "off",
      "no-console": "off",
      "no-unused-vars": "warn",
      "react/prop-types": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "root": true
  }
}
